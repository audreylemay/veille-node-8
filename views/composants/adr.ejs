<%
	let objOrdre = {
		"_id": "asc",
		"nom": "asc",
		"prenom": "asc",
		"telephone": "asc",
		"courriel": "asc"
	}

	if(locals.cle) {
		objOrdre[cle]=ordre;
	}
%>

<table class="tableau">
	<tr>
		<th><a href='/trier/_id/<%= objOrdre._id %>'>ID</a></th>
		<th><a href='/trier/nom/<%= objOrdre.nom %>'>Nom</a></th> 
		<th><a href='/trier/prenom/<%= objOrdre.prenom %>'>Prenom</a></th>
		<th class="telephone"><a href='/trier/telephone/<%= objOrdre.telephone %>'>Telephone</a></th>
		<th class="courriel"><a href='/trier/courriel/<%= objOrdre.courriel %>'>Courriel</a></th>
		<th>Ajouter</th>
	</tr>
	<% adresse.forEach(elm => { %>
	
	<tr>
		<td><%= elm._id %></td>
		<td contenteditable='true'><%= elm.nom %></td>
		<td contenteditable='true'><%= elm.prenom %></td>
		<td contenteditable='true' class="telephone"><%= elm.telephone %></td>
		<td contenteditable='true' class="courriel"><%= elm.courriel %></td>
		<td><a href="/delete/<%= elm._id %>">Delete</a></td>
		<td><a class='sauver' href="#">Sauver</a></td>
		<td><a class='profil' href="/profil/<%= elm._id %>">Profil</a></td>
	</tr>
	<% }) %>
</table>